{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true
  },
  "ts-node": {
    "files": true
  },
  "files": ["./src/custom.d.ts"],
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "*/node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
